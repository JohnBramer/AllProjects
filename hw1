#include <iostream>
#include <string>
#include <iomanip>
using namespace std;

int main()
{
    float balance;
    int product;
    char decision;
    bool Schmapple = false;
    bool Lightly_Used_Grape = false;
    bool Scent_of_a_Pizza = false;
    bool Heavily_Used_Grape = false;
    bool Banana = false;
    int Schmapple_count = 0;
    int Lightly_Used_Grape_count = 0;
    int Scent_of_a_Pizza_count = 0;
    int Heavily_Used_Grape_count = 0;
    int Banana_count = 0;
    cout << fixed;
    cout << setprecision(2);
    cout << "How much money do you have?" << endl;
    cin >> balance;
    
    do
    {   
        cout << "Enter a product (1-5)" << endl;
        do
        {
            cin >> product;
            if(product< 1 || product > 5)
                cout << "Invalid! Please enter again: " << endl;
        }while(product < 1 || product > 5);
        
        
        if(product == 1){
            if(balance >= 1.50){ //[grader] -1 Literal that should be a constant
                cout << "Purchased: Schmapple" << endl;
                balance = balance - 1.50;
                Schmapple_count++;
                Schmapple = true;
            }else{
                cout << "Not enough funds!" << endl;
            }
        }else if(product == 2){
            if(balance >= 1.00){ //[grader] -1 Literal that should be a constant
                cout << "Purchased: Lightly Used Grape" << endl;
                balance = balance - 1.00;
                Lightly_Used_Grape_count++;
                Lightly_Used_Grape = true;
            }else{
                cout << "Not enough funds!" << endl;
            }
        }else if(product == 3){
            if(balance >= .50){ //[grader] -1 Literal that should be a constant
                cout << "Purchased: Scent of a Pizza" << endl;
                balance = balance - .50;
                Scent_of_a_Pizza_count++;
                Scent_of_a_Pizza = true;
            }else{
                cout << "Not enough funds!" << endl;
            }       
        }else if(product == 4){
            if(balance >= 1.25){ //[grader] -1 Literal that should be a constant
                cout << "Purchased: Heavily Used Grape" << endl;
                balance = balance - 1.25;
                Heavily_Used_Grape_count++;
                Heavily_Used_Grape = true;
            }else{
                cout << "Not enough funds!" << endl;
            }
        }else if(product == 5){
            if(balance >= 2){ //[grader] -1 Literal that should be a constant
                cout << "Purchased: Banana?" << endl;
                balance = balance - 2;
                Banana_count++;
                Banana = true;
            }else{
                cout << "Not enough funds!" << endl;
            }
        }
                
    cout << "Keep purchasing? (y/n)" << endl;
    
    do
    {
        cin >> decision;
        if(decision != 'y' && decision != 'n')
            cout << "Invlaid! Please enter again: " << endl;
        }while(decision != 'y' && decision != 'n');

    }while(decision != 'n');
    
    cout << "You Purchased" << endl;

    if(Schmapple == true){
        cout << "Schmapple - " << Schmapple_count << endl;
    }
    if(Lightly_Used_Grape == true){
        cout << "Lightly Used Grape - " << Lightly_Used_Grape_count << endl;
    }
    if(Scent_of_a_Pizza == true){
        cout << "Scent of a Pizza - " << Scent_of_a_Pizza_count << endl;
    }
    if(Heavily_Used_Grape == true){
        cout << "Heavily Used Grape - " << Heavily_Used_Grape_count << endl;
    }
    if(Banana == true){
        cout << "Banana - " << Banana_count << endl;
    }
    cout << "You have $" << balance << " remaining. Have a Schmealthy day!" << endl;
}
